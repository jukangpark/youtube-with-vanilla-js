extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username",name="username", type="text", required)
        input(placeholder="Password",name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=e553f695a36e18ac8472&allow_signup=false&scope=user:email") Continue with Github &rarr;
    hr

    div 
        span Don't have an account?
        br
        a(href="/join") Create now &rarr;