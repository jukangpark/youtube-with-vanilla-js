extends ../base
include ../mixins/video

block content
    div.profile__data
        if isHeroku
            if user.avatarUrl === undefined 
                div
                    i.fas.fa-user.avatarIcon
            else 
                img(src=user.avatarUrl crossorigin).avatar
        else 
            if user.avatarUrl === undefined 
                div
                    i.fas.fa-user.avatarIcon
            else 
                img(src="/" + user.avatarUrl).avatar
        h3=user.name
    div.video-grid 
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found.


